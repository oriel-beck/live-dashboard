{
  "name": "bot",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "bun --env-file=../.env run src/cluster-manager.ts",
    "start:cluster": "bun --env-file=../.env run src/cluster-manager.ts",
    "start:single": "USE_SHARDING=false bun --env-file=../.env run src/index.ts",
    "start:cluster:prod": "node dist/cluster-manager.js",
    "dev": "bun --watch --env-file=../.env run src/cluster-manager.ts",
    "dev:cluster": "bun --watch --env-file=../.env run src/cluster-manager.ts",
    "dev:single": "USE_SHARDING=false bun --watch --env-file=../.env run src/index.ts",
    "deploy-commands": "bun --env-file=../.env run src/deploy-commands.ts"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@discord-bot/shared-types": "../shared-types/",
    "bufferutil": "^4.0.9",
    "discord-hybrid-sharding": "^3.0.0",
    "discord.js": "^14.21.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ioredis": "^5.7.0",
    "node-global-proxy": "^1.0.1",
    "prom-client": "^15.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
