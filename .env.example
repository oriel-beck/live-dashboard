# Discord Bot Configuration
# REQUIRED: Get these from https://discord.com/developers/applications
BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
CLIENT_ID=your_discord_client_id_here

# API Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:4200
FRONTEND_URL=http://localhost:4200

# Database Configuration (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=public
POSTGRES_SSL=false
DATABASE_URL=postgresql://postgres:password@postgres:5432/public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379

# JWT & Session Security
# IMPORTANT: Change these to secure random strings (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-change-in-production-min-32-chars
SESSION_MAX_AGE=604800000

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# Feature Flags
FEATURE_RATE_LIMITING=true
FEATURE_METRICS=true
METRICS_ENABLED=true

# Monitoring
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9090

# RabbitMQ Configuration
RABBITMQ_URL=amqp://rabbitmq:5672
RABBITMQ_USERNAME=bot
RABBITMQ_PASSWORD=bot_password

# Nirn Proxy Configuration (Discord REST API rate limiting)
NIRN_HOST=nirn-proxy
NIRN_PORT=8081

# Docker Registry Configuration
REGISTRY_HOST=localhost:5000
REGISTRY_PORT=5000

# Cluster Manager Configuration
DOCKER_SWARM_MODE=false
DOCKER_IMAGE_NAME=localhost:5000/bot:cluster
DOCKER_CLUSTER_IMAGE=localhost:5000/bot:cluster
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_PROJECT_PREFIX=clustered-bot
DOCKER_NETWORK=clustered-bot_app-network
CONTAINER_PREFIX=bot-cluster

# Cluster Configuration
SHARDS_PER_CLUSTER=16
CLUSTER_STARTUP_DELAY=5000
CLUSTER_READY_TIMEOUT=30000
CLUSTER_HEALTH_CHECK_INTERVAL=5000
HEALTH_CHECK_PORT=8080

# Discord API Configuration
DISCORD_API_CHECK_INTERVAL=86400000

# Bot Runtime Configuration (set by cluster manager, shown for reference)
# These are automatically set when bot containers are created by the cluster manager
# CLUSTER_ID=0
# SHARD_LIST=[0,1,2,3]
# TOTAL_SHARDS=4
# API_BASE_URL=http://api:3000
